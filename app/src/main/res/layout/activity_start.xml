<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000033"
    tools:context="com.upstridge.tmapp.bus.StartActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffffff"
          >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/favicon"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Tuwende"
              android:textSize="28dp"
              android:fontFamily="sans-serif-smallcaps"
              android:textColor="#000000"
              />

            </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

  <!--<TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:text="Select Mode"
      android:textAlignment="center"
      android:layout_marginTop="20dp"
      android:textColor="#000066"
      android:textSize="20sp" />-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/rl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="2"
        android:id="@+id/lin1"
        android:layout_marginTop="40dp">

    <ViewFlipper
        android:id="@+id/airplane"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView"
        android:layout_weight="1"
        android:backgroundTint="#872657">


    </ViewFlipper>

    <ViewFlipper
        android:id="@+id/travel"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:layout_alignTop="@+id/airplane"
        android:layout_toRightOf="@+id/airplane"
        android:layout_toEndOf="@+id/airplane"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp">


    </ViewFlipper>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="2"
        android:id="@+id/lin5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/lin1">

    <ViewFlipper
        android:id="@+id/hotel"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:backgroundTint="#872657">



    </ViewFlipper>
    <ViewFlipper
        android:id="@+id/carhire"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:layout_below="@+id/lin1"
        android:backgroundTint="#872657"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@+id/hotel"
        android:layout_toRightOf="@+id/hotel"
        android:layout_toEndOf="@+id/hotel">


    </ViewFlipper>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="2"
        android:id="@+id/lin2"
        android:layout_below="@+id/lin5">
    <ViewFlipper
        android:id="@+id/taxi"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:backgroundTint="#872657">


    </ViewFlipper>


    <ViewFlipper
        android:id="@+id/train"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:backgroundTint="#872657"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignTop="@+id/taxi"
        android:layout_toRightOf="@+id/taxi"
        android:layout_toEndOf="@+id/taxi">


    </ViewFlipper>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/lin3"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lin2">


    <ViewFlipper
        android:id="@+id/event"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="#872657"
        android:layout_alignParentBottom="true">


    </ViewFlipper>

    </LinearLayout>

     </RelativeLayout>
    </ScrollView>
</RelativeLayout>
