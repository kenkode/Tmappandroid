<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/hotel10"
    tools:context="com.upstridge.tmapp.hotel.CheckTimeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#bbffffff"
        android:padding="15dp"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Time"
        android:textAlignment="center"
        android:textSize="28sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView24"
        android:text="Check-In Date : "
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-smallcaps"/>

    <EditText
        android:id="@+id/date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Select Check-In Date"
        android:inputType="textPersonName"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/calendar12"
        android:layout_below="@+id/textView24"
        android:layout_toRightOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="30dp"
        android:text="Check-In Time : "
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Select Check-In Time"
        android:inputType="textPersonName"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:drawableRight="@drawable/time1"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/textView15"/>

    <TextView
        android:id="@+id/textView29"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Area" />

    <Spinner
        android:id="@+id/area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView29"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="15dp"/>

        <LinearLayout
            android:id="@+id/error_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/warning"
                android:tint="@color/colorRed"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="No data"
                android:textColor="@color/colorRed" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/load_cars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true" />


    <Button
        android:id="@+id/customers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@color/colorButton"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/textView29"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>
