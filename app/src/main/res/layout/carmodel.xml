<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="1dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/cb"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/hotelImage"
                android:layout_toRightOf="@+id/cb"
                android:padding="10dp"

                android:src="@drawable/default_bus"/>

            <TextView
                android:id="@+id/cartype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hotelImage"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingBottom="5dp"
                android:paddingTop="15dp"
                android:text="Vehicle Name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#660000"
                android:textSize="20dp"
                android:textStyle="bold" />



            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"

                 android:text="Arrival:"
                 android:id="@+id/adults"
                 android:textSize="16dp"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:layout_toRightOf="@id/hotelImage"
                 android:layout_below="@id/roomtype"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Departure:"
                 android:id="@+id/children"
                 android:paddingBottom="5dp"
                 android:textSize="16dp"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:layout_toRightOf="@id/hotelImage"
                 android:layout_below="@id/adults"/>
              -->


            <TextView
                android:id="@+id/capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cartype"
                android:layout_toRightOf="@id/hotelImage"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Capacity:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/capacity"
                android:layout_toRightOf="@id/hotelImage"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Price per day:"
                android:textStyle="bold"
                android:textColor="@color/charcoal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="organization ID:"
                android:id="@+id/organization"
                android:textSize="16dp"
                android:textColor="#68ae00"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_toRightOf="@id/hotelImage"
                android:layout_below="@id/price"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car ID:"
                android:id="@+id/carid"
                android:textSize="16dp"
                android:textColor="#68ae00"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_toRightOf="@id/hotelImage"
                android:layout_below="@id/organization"
                android:visibility="invisible"/>




        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>