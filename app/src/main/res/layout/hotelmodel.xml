<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"

        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/hotelImage"
        android:padding="10dp"
        android:src="@drawable/hotel_default"/>

            <TextView
                android:id="@+id/hotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hotelImage"
                android:fontFamily="monospace"
                android:paddingBottom="5dp"
                android:paddingTop="15dp"
                android:text="Hotel Name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fc8213"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotelName"
                android:layout_toRightOf="@id/hotelImage"
                android:fontFamily="serif"
                android:paddingBottom="5dp"
                android:text="Branch"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="organization ID:"
        android:id="@+id/organization"
        android:textSize="16dp"
        android:textColor="#68ae00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/hotelImage"
        android:layout_below="@id/economicfare"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel ID:"
        android:id="@+id/hotelid"
        android:textSize="16dp"
        android:textColor="#68ae00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/hotelImage"
        android:layout_below="@id/organization"
        android:visibility="invisible"/>


</RelativeLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>