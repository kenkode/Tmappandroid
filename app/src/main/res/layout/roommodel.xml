<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/roomImage"
        android:padding="10dp"
        android:src="@drawable/room"/>

            <TextView
                android:id="@+id/roomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/roomImage"
                android:fontFamily="monospace"
                android:paddingBottom="5dp"
                android:paddingTop="15dp"
                android:text="Room Type"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fc8213"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/roomName"
                android:layout_toRightOf="@id/roomImage"
                android:fontFamily="serif"
                android:paddingBottom="5dp"
                android:text="Availability"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/adults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/availability"
                android:layout_toRightOf="@id/roomImage"
                android:fontFamily="serif"
                android:paddingBottom="5dp"
                android:text="Number of adults"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adults"
                android:layout_toRightOf="@id/roomImage"
                android:fontFamily="serif"
                android:paddingBottom="5dp"
                android:text="Number of children"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/children"
                android:layout_toRightOf="@id/roomImage"
                android:fontFamily="serif"
                android:paddingBottom="5dp"
                android:text="Price"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#68ae00"
                android:textSize="18dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROOM ID:"
        android:id="@+id/roomid"
        android:textSize="16dp"
        android:textColor="#68ae00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/hotelImage"
        android:layout_below="@id/organization"
        android:visibility="invisible"/>

</RelativeLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>