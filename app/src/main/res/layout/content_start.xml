<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.upstridge.tmapp.bus.StartActivity"
    tools:showIn="@layout/activity_start">
    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel10" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/eventimg2" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bu32" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/passport" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/voxy" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/t" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/t2" />


        </RelativeLayout>
    </ViewFlipper>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:id="@+id/rl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:id="@+id/lin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@layout/circle_background"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            >

        <ImageView
            android:id="@+id/bus"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/bus20"
            android:layout_centerHorizontal="true"
            />

            <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_below="@+id/bus"
            android:textSize="20sp"
                android:textColor="@color/colorButton"
            android:fontFamily="sans-serif-smallcaps"
            android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
            android:text="BUS"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@layout/circle_background"
            android:layout_weight="1">

        <ImageView
            android:id="@+id/plane"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/airplane_shape"
            android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plane"
                android:textSize="20sp"
                android:textColor="@color/colorButton"
                android:fontFamily="sans-serif-smallcaps"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="AIRPLANE"
                android:textStyle="bold"/>
        </RelativeLayout>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:id="@+id/lin1"
                android:layout_below="@+id/lin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@layout/circle_background"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    >

                    <ImageView
                        android:id="@+id/train"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/train21"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/train"
                        android:textSize="20sp"
                        android:textColor="@color/colorButton"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="TRAIN"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@layout/circle_background"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/taxi"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/taxi22"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/taxi"
                        android:textSize="20sp"
                        android:textColor="@color/colorButton"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="TAXI"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:id="@+id/lin2"
                android:layout_below="@+id/lin1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@layout/circle_background"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    >

                    <ImageView
                        android:id="@+id/hotel"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/tray"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hotel"
                        android:textSize="20sp"
                        android:textColor="@color/colorButton"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="HOTEL"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@layout/circle_background"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/events"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/event21"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/events"
                        android:textSize="20sp"
                        android:textColor="@color/colorButton"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="EVENTS"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/lin3"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@+id/lin2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@layout/circle_background"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/car"
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/car3"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/car"
                        android:textSize="20sp"
                        android:textColor="@color/colorButton"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="CAR HIRE"
                        android:textStyle="bold"/>

                </RelativeLayout>


            </LinearLayout>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>
