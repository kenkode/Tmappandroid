<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upstridge.tmapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProvinceActivity"
            android:label="@string/title_activity_province" />
        <activity
            android:name=".OriginActivity"
            android:label="@string/title_activity_origin" />
        <activity
            android:name=".DestinationActivity"
            android:label="@string/title_activity_destination" />
        <activity
            android:name=".VehicleActivity"
            android:label="@string/title_activity_vehicle" />
        <activity
            android:name=".TravellersActivity"
            android:label="@string/title_activity_travellers" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".BookingActivity"
            android:label="@string/title_activity_booking" />
        <activity
            android:name=".SeatsActivity"
            android:label="@string/title_activity_seats"></activity>
        <activity
            android:name=".SeatSelectionActivityNew"
            android:label="@string/title_activity_seats"></activity>

    </application>

</manifest>